default :
{
    name : "pythran"
    build_source : "script"
    compil_script :  'pip_install' + $VARS.scriptExtension
    get_source : "archive"
    system_info :
    {
        rpm : []
        rpm_dev : []
        apt : []
        apt_dev : ['python3-pythran']
    }
    environ :
    {
    }
    depend : ['Python', 'setuptools', 'gast', 'decorator', 'networkx', 'numpy', 'beniget', 'ply', 'six']
    patches : []
    source_dir : $APPLICATION.workdir + $VARS.sep + 'SOURCES' + $VARS.sep + $name
    build_dir : $APPLICATION.workdir + $VARS.sep + 'BUILD' + $VARS.sep + $name
    install_dir : 'base'
    properties:
    {
      incremental : "yes"
      pip : "yes"
    }
}
