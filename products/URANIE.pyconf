default :
{
    name : "URANIE"
    build_source : "script"
    compil_script :  $name + $VARS.scriptExtension
    get_source : "archive"
    environ :
    {
       env_script : $name + ".py"
    }
    depend : ['Python', 'root','nlopt','lapack', 'boost']
    build_depend : ["cmake", 'swig', 'cppunit', 'fftw']
    patches : []
    source_dir : $APPLICATION.workdir + $VARS.sep + 'SOURCES' + $VARS.sep + $name
    build_dir : $APPLICATION.workdir + $VARS.sep + 'BUILD' + $VARS.sep + $name
    install_dir : 'base'
    properties :
    {
      incremental : "yes"
    }
}

version_4_9_0 :
{
    compil_script : "URANIE-4.9.0.sh"
    archive_info :
    {
        archive_name : "URANIE-4.9.0-Source.tar.gz"
    }
    patches: []
    opt_depend: ["openmpi"]
}

