        pyreadline : '2.0'
        Python : '3.6.5'
        pytz : '2015.7'
        qt : '5.12.10'
        qwt : '6.1.2'
        requests : '2.19.1'
        rkCommon : '1.5.1'
        root: '6.22.02'
