        # SALOME MODULES :
        'CONFIGURATION'
        'SALOME'
        'SHAPER'
        'SHAPERSTUDY'
        'RESTRICTED'
        'LIBBATCH' : {tag : 'V2_4_5'}
        'KERNEL'
        'MEDCOUPLING': {section: 'default_32BIT_IDS'}
        'GUI'
        'GEOM'
