#-*- coding:utf-8 -*-

APPLICATION :
{
    name : 'SALOME-9.14.0'
    workdir : $LOCAL.workdir + $VARS.sep + $APPLICATION.name
    cmake_generator : 'Visual Studio 15 2017'
    cmake_build_type: 'Release' # Debug, RelWithDebInfo, Release, MinSizeRel
    tag : 'V9_14_0'
    dev : 'no'
    verbose : 'no'
    debug   : 'no'
    base    : 'no'
    python3 : 'yes'
